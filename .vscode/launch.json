            "MIMode": "gdb",
            "miDebuggerPath": "C:/Users/ls/scoop/apps/mingw-winlibs/14.2.0-12.0.0-r2/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
